{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "rootDir": "src",
    "outDir": "build"
  },
  "exclude": [
    "node_modules",
    "index.js",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": ["__tests__/*.js", "__tests__/App-test.ts"]
}
